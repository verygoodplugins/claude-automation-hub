# Claude Automation Hub Environment Configuration
# Copy this file to .env and fill in your values

# Cloudflare Tunnel Configuration
TUNNEL_NAME=claude-automation-hub
TUNNEL_CREDENTIALS_FILE=~/.cloudflared/YOUR_TUNNEL_ID.json
TUNNEL_DOMAIN=automation.verygoodplugins.com

# Slack App Credentials - BOTH TOKENS REQUIRED!
# Get these from https://api.slack.com/apps/YOUR_APP_ID/general
# 
# Signing Secret: Basic Information → App Credentials → Signing Secret
SLACK_SIGNING_SECRET=your_signing_secret_here
#
# Bot Token: OAuth & Permissions → OAuth Tokens → Bot User OAuth Token
# Starts with xoxb- (REQUIRED for views.publish and Slack API operations)
SLACK_BOT_TOKEN=xoxb-your-bot-token
#
# User Token: OAuth & Permissions → OAuth Tokens → User OAuth Token  
# Starts with xoxp- (REQUIRED for MCP server operations)
SLACK_USER_TOKEN=xoxp-your-user-token

# Server Configuration
SERVER_PORT=8765
SERVER_HOST=localhost

# Slack User Configuration
# Your Slack User ID (find it with: node scripts/slack-get-user-id.js)
SLACK_USER_ID=U13ECGWTA

# Notification Settings (for automation alerts)
NTFY_TOPIC=claude-automation-hub

# MCP Server Configurations
# FreeScout - Support ticket management
FREESCOUT_URL=https://your-support-site.com
FREESCOUT_API_KEY=your_freescout_api_key_here

# GitHub - Repository management
# Get a personal access token from https://github.com/settings/tokens
GITHUB_PERSONAL_ACCESS_TOKEN=ghp_your_github_token_here

# Brave Search - Web search capabilities
# Get API key from https://brave.com/search/api/
BRAVE_API_KEY=your_brave_api_key_here

# WordPress - WP Fusion site
# Use Application Passwords: https://wpfusion.com/wp-admin/profile.php
WORDPRESS_USERNAME=your_wp_username
WORDPRESS_PASSWORD="your wp application password here"

# WordPress - Very Good Plugins site
# Use Application Passwords: https://verygoodplugins.com/wp-admin/profile.php
VGP_USERNAME=your_vgp_username
VGP_PASSWORD="your vgp application password here"

# Evernote Configuration
EVERNOTE_CONSUMER_KEY=your-evernote-consumer-key
EVERNOTE_CONSUMER_SECRET=your-evernote-consumer-secret
EVERNOTE_ENVIRONMENT=production

# Optional: Set to 'production' for less verbose logging
NODE_ENV=development
