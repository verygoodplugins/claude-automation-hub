{
  "permissions": {
    "allow": [
      "Edit",
      "Write", 
      "MultiEdit",
      "Read",
      "Bash(composer:*)",
      "Bash(npm:*)",
      "Bash(yarn:*)",
      "Bash(gulp:*)",
      "Bash(phpunit:*)",
      "Bash(phpcs:*)",
      "Bash(phpcbf:*)",
      "Bash(phpstan:*)",
      "Bash(php -l:*)",
      "Bash(./vendor/bin/*)",
      "Bash(npx mcp-reloader:*)",
      "Bash(node:*)",
      "Bash(ln:*)",
      "Bash(timeout:*)",
      "Bash(gtimeout:*)",
      "Bash(cursor:*)",
      "Bash(touch:*)",
      "Bash(scripts/*.sh:*)",
      "Bash(git:*)",
      "Bash(wp:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(cat:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(cp:*)",
      "Bash(mv:*)",
      "Bash(rm:*)",
      "Bash(chmod:*)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(jq:*)",
      "Bash(echo:*)",
      "Bash(awk:*)",
      "Bash(sed:*)",
      "Bash(base64:*)",
      "Bash(gh:*)",
      "WebFetch",
      "WebSearch"
    ],
    "deny": [
      "Bash(sudo:*)",
      "Bash(su:*)", 
      "Bash(rm -rf /*)",
      "Bash(format:*)",
      "Bash(fdisk:*)",
      "Bash(git push:*)"
    ],
    "ask": [
      "Bash(git push:*)"
    ]
  },
  "env": {
    "CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR": "true",
    "DISABLE_COST_WARNINGS": "0",
    "BASH_MAX_OUTPUT_LENGTH": "50000"
  },
  "statusLine": {
    "type": "command",
    "command": "claude-status"
  },
  "model": "opus",
  "_comment": "Essential Claude Code settings for automation workflows",
  "_setup": {
    "location": {
      "global": "~/.claude/settings.json",
      "project": ".claude/settings.json"
    },
    "customization": "Add project-specific MCP tool permissions as needed"
  }
}
