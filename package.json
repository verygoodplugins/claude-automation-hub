{
  "name": "claude-automation-hub",
  "version": "1.0.0",
  "description": "Personal command center for Claude Desktop + MCP automations with dynamic tool creation",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "setup:env": "node scripts/setup-mcp-config.js",
    "mcp-server": "npm run setup:env && npx mcp-reloader",
    "dev": "npm run setup:env && npx mcp-reloader",
    "proxy": "node src/proxy/cursor-web-proxy.js",
    "proxy:dev": "node --watch src/proxy/cursor-web-proxy.js",
    "proxy:start": "npm run proxy",
    "setup:links": "node src/proxy/setup-clickable-links.js",
    "test-tools": "node test/test-tools.js",
    "test-mobile": "node test/test-mobile.js",
    "test-bundled": "node test/test-bundled.js",
    "test-scheduler": "node test/test-scheduler.js",
    "test-cursor": "node test/test-cursor-integration.js",
    "test-slack": "node test/test-slack-integration.js",
    "test-mcp": "node test-mcp-env.js",
    "morning-now": "node test/trigger-morning.js"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.60.0",
    "express": "^4.18.2",
    "mcp-reloader": "github:mizchi/mcp-reloader",
    "node-fetch": "^2.7.0"
  },
  "keywords": [
    "mcp",
    "claude",
    "automation",
    "tools",
    "hot-reload"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/claude-automation-hub.git"
  },
  "devDependencies": {
    "dotenv": "^17.2.1"
  }
}
